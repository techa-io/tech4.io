    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('<% if (page.title) { %>/img/post-bg.jpg<% } else if (page.posts) { %>/img/home-bg.jpg<% } %>')" >
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <% if (page.title) { %>
					<div class="post-heading">
						
                        <h1><%- partial('post/title', {index:false,post:page,class_name: 'article-title'}) %></h1>
                        <h2 class="subheading"><%- page.excerpt -%></h2>
                        <span class="meta">Posted by <%- page.author -%> on <%- date(page.date, 'MMMM DD, YYYY') -%></span>
                    </div>
					<% } else if (page.posts) { %>
					<div class="site-heading">
                        <h1>Clean Blog</h1>
                        <hr class="small">
                        <span class="subheading">A Clean Blog Theme by Start Bootstrap</span>
                    </div>
					<% } %>
                </div>
            </div>
        </div>
    </header>